{
  "ngClass": {
    "prefix": "a-ngClass",
    "body": [
      "[ngClass]=\"{${cssClass}: ${expression}}\""
    ],
    "description": "Angular ngClass snippet"
  },
  "ngFor": {
    "prefix": "a-ngFor",
    "body": [
      "*ngFor=\"let ${item} of ${list}\""
    ],
    "description": "Angular *ngFor snippet"
  },
  "ngForAsync": {
    "prefix": "a-ngForAsync",
    "body": [
      "*ngFor=\"let ${item} of ${stream} | async as ${list}\""
    ],
    "description": "Angular *ngForAsync snippet"
  },
  "ngIf": {
    "prefix": "a-ngIf",
    "body": [
      "*ngIf=\"${expression}\""
    ],
    "description": "Angular *ngIf snippet"
  },
  "ngIfElse": {
    "prefix": "a-ngIfElse",
    "body": [
      "*ngIf=\"${expression};else ${templateName}\""
    ],
    "description": "Angular *ngIfElse snippet"
  },
  "ngModel": {
    "prefix": "a-ngModel",
    "body": [
      "[(ngModel)]=\"${binding}\""
    ],
    "description": "Angular ngModel snippet"
  },
  "ngRouterLink": {
    "prefix": "a-routerLink",
    "body": [
      "[routerLink]=\"['/${routeName}']\""
    ],
    "description": "Angular routerLink snippet"
  },
  "ngStyle": {
    "prefix": "a-ngStyle",
    "body": [
      "[ngStyle]=\"{${style}: ${expression}}\""
    ],
    "description": "Angular ngStyle snippet"
  },
  "ngSwitch": {
    "prefix": "a-ngSwitch",
    "body": [
      "<div [ngSwitch]=\"${conditionExpression}\">",
      "\t<div *ngSwitchCase=\"${expression}\">${output}</div>",
      "\t<div *ngSwitchDefault>${output2}</div>",
      "</div>"
    ],
    "description": "Angular ngSwitch snippet"
  },
  "pre w/ json": {
    "prefix": "a-prej",
    "body": [
      "<pre>{{$1 | json}}</pre>$2"
    ],
    "description": "Angular pre debug | json"
  },
  "pre w/ async json": {
    "prefix": "a-preja",
    "body": [
      "<pre>{{$1 | async | json}}</pre>$2"
    ],
    "description": "Angular pre debug | async | json"
  }
}
